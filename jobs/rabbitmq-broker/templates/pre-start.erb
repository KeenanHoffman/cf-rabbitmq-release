#!/bin/bash -e

[ -z "$DEBUG" ] || set -x

JOB_DIR=/var/vcap/jobs/rabbitmq-broker
ROOT_LOG_DIR=/var/vcap/sys/log
DATA_TMP_DIR=/var/vcap/data/tmp

ensure_dir() {
    _dir=$1
    mkdir -p "${_dir}"
    chown -LR vcap:vcap "${_dir}"
    chmod 750 "${_dir}"
}

main() {
  ensure_dir "${JOB_DIR}"
  ensure_dir "${ROOT_LOG_DIR}"
  ensure_dir "${DATA_TMP_DIR}"
}

main
